<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calcular_viaje"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.sise.applinea1.activity_calcular_viaje"
    android:background="@android:color/transparent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/scheduleAppBarMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_rectangulo"
                android:elevation="4dp"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="CALCULAR VIAJE"
                        android:textAlignment="center"
                        android:textColor="@color/White"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_trenes"
                    android:gravity="left"
                    android:text="ORIGEN"
                    android:textColor="@color/Black"

                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/spinner_origen"
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.06"
                    android:gravity="center"

                    >

                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="DESTINO"
                    android:textColor="@color/Black"
                    android:drawableLeft="@drawable/ic_trenes"
                    android:textSize="17sp"

                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/spinner_destino"
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.06"
                    android:gravity="center">

                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="vertical"
                android:weightSum="1">
                <Button
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.06"
                    android:gravity="center"
                    android:text="CALCULAR"
                    android:id="@+id/btnCalcular"
                    android:textColor="@color/White"
                    android:theme="@style/FaceButtonStyle"
                    android:background="@drawable/btn_rectangulo"/>
            </LinearLayout>


        </android.support.design.widget.AppBarLayout>


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navview"
        app:headerLayout="@layout/cabecera"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        app:itemTextColor="@color/Black"
        app:itemIconTint="@color/Black"
        app:menu="@menu/drawermenu"

        android:layout_gravity="start">

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_rectangulo"
            android:text="Cerrar Sesion"
            android:textColor="@color/White"
            android:theme="@style/FaceButtonStyle" />

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
