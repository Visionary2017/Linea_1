<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.sise.applinea1.MenuPrincipalActivity"
    android:background="@android:color/transparent"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>

        <android.support.design.widget.AppBarLayout
            android:id="@+id/scheduleAppBarMain2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_rectangulo"
                android:elevation="4dp"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="MÓDULOS"
                        android:textAlignment="center"
                        android:textColor="@color/White"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageButton
                        android:id="@+id/btnActualizarUsuario"
                        android:layout_width="56dp"
                        android:layout_height="114dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.15"
                        android:background="@null"
                        android:paddingBottom="25dp"
                        android:src="@drawable/bloggif_59c1419548f48"></ImageButton>

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-95dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="30dp"
                        android:clickable="false"
                        android:text="ACTUALIZAR "
                        android:textColor="@color/Green"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-90dp"
                        android:layout_marginTop="48dp"
                        android:clickable="false"
                        android:text="USUARIO"
                        android:textColor="@color/Green"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <ImageButton
                        android:id="@+id/btnRecargar"
                        android:layout_width="56dp"
                        android:layout_height="114dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.15"
                        android:background="@null"
                        android:paddingBottom="25dp"
                        android:src="@drawable/recargar"></ImageButton>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-75dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="30dp"
                        android:clickable="false"
                        android:text="RECARGA"
                        android:textColor="@color/Green"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageButton
                        android:id="@+id/btnConsultarSaldo"
                        android:layout_width="56dp"
                        android:layout_height="114dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.15"
                        android:background="@null"
                        android:paddingBottom="25dp"
                        android:src="@drawable/recarga"></ImageButton>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-95dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="30dp"
                        android:clickable="false"
                        android:text="CONSULTAR"
                        android:textColor="@color/Green"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-90dp"
                        android:layout_marginTop="48dp"
                        android:clickable="false"
                        android:text="SALDO"
                        android:textColor="@color/Green"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <ImageButton
                        android:id="@+id/btnEstaciones"
                        android:layout_width="56dp"
                        android:layout_height="114dp"
                        android:layout_marginLeft="45dp"
                        android:layout_weight="0.15"
                        android:background="@null"
                        android:paddingBottom="25dp"
                        android:src="@drawable/estaciones"></ImageButton>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-85dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="30dp"
                        android:clickable="false"
                        android:text="ESTACIONES"
                        android:textColor="@color/Green"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageButton
                        android:id="@+id/btnCalcular_Viaje"
                        android:layout_width="56dp"
                        android:layout_height="114dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.15"
                        android:background="@null"
                        android:paddingBottom="25dp"
                        android:src="@drawable/calcular_viaje"></ImageButton>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-95dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="30dp"
                        android:clickable="false"
                        android:text="CALCULAR     "
                        android:textColor="@color/Green"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-90dp"
                        android:layout_marginTop="48dp"
                        android:clickable="false"
                        android:text="VIAJE  "
                        android:textColor="@color/Green"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <ImageButton
                        android:id="@+id/btnContacto"
                        android:layout_width="56dp"
                        android:layout_height="114dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.15"
                        android:background="@null"
                        android:paddingBottom="25dp"
                        android:src="@drawable/contacto"></ImageButton>

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-75dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="30dp"
                        android:clickable="false"
                        android:text="CONTACTO"
                        android:textColor="@color/Green"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>


                </LinearLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:clickable="false"
                    android:gravity="bottom"
                    android:text="Linea1 ©"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="8sp"></TextView>
            </LinearLayout>

        </android.support.design.widget.AppBarLayout>


    </LinearLayout>

<android.support.design.widget.NavigationView
    android:id="@+id/navview"
    app:headerLayout="@layout/cabecera"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    app:itemTextColor="@color/Black"
    app:itemIconTint="@color/Black"
    app:menu="@menu/drawermenu"

    android:layout_gravity="start">
    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Cerrar Sesion"
        android:textColor="@color/White"
        android:theme="@style/FaceButtonStyle"
        android:background="@drawable/btn_rectangulo"
        android:layout_gravity="bottom"/>

</android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
